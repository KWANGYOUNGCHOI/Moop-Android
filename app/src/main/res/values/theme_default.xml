<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="colorPrimary">@color/white</color>
    <color name="colorPrimaryDark">@color/grey</color>
    <color name="colorAccent">#2D7AF6</color>
    <color name="colorAccentHalf">#662D7AF6</color>

    <color name="default_errorColor">@color/red_500</color>
    <color name="default_dividerColor">@color/grey_200</color>
    <color name="default_bgColor">#FAFAFA</color>
    <color name="default_textColorDark">@color/dark_icon</color>
    <color name="default_textColorLight">@color/dark_icon_half_alpha</color>
    <color name="default_iconColorDark">@color/dark_icon</color>
    <color name="default_iconColorLight">@color/dark_icon_half_alpha</color>
    <color name="default_cardBgColorDark">@color/white</color>
    <color name="default_cardBgColorLight">@color/grey_200</color>
    <color name="default_tagOutlineColor">@color/default_bgColor</color>
    <color name="default_stageColor">@color/white</color>
    <color name="default_stageStarColor">@color/colorAccent</color>
    <color name="default_stageBrightColor">@color/dark_icon</color>
    <color name="default_stageDimColor">@color/dark_icon_half_alpha</color>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorAccentHalf">@color/colorAccentHalf</item>
        <item name="android:windowBackground">?attr/moop_bgColor</item>

        <item name="moop_errorColor">@color/default_errorColor</item>
        <item name="moop_dividerColor">@color/default_dividerColor</item>
        <item name="moop_bgColor">@color/default_bgColor</item>
        <item name="moop_textColorDark">@color/default_textColorDark</item>
        <item name="moop_textColorLight">@color/default_textColorLight</item>
        <item name="moop_iconColorDark">@color/default_iconColorDark</item>
        <item name="moop_iconColorLight">@color/default_iconColorLight</item>
        <item name="moop_cardDividerColor">?attr/moop_dividerColor</item>
        <item name="moop_cardBgColorDark">@color/default_cardBgColorDark</item>
        <item name="moop_cardBgColorLight">@color/default_cardBgColorLight</item>
        <item name="moop_cardContentColorDark">?attr/moop_iconColorDark</item>
        <item name="moop_cardContentColorLight">?attr/moop_iconColorLight</item>
        <item name="moop_tagOutlineColor">@color/default_tagOutlineColor</item>
        <item name="moop_stageColor">@color/default_stageColor</item>
        <item name="moop_stageStarColor">@color/default_stageStarColor</item>
        <item name="moop_stageBrightColor">@color/default_stageBrightColor</item>
        <item name="moop_stageDimColor">@color/default_stageDimColor</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorAccentHalf">@color/colorAccentHalf</item>
        <item name="android:windowBackground">?attr/moop_bgColor</item>

        <item name="moop_errorColor">@color/default_errorColor</item>
        <item name="moop_dividerColor">@color/default_dividerColor</item>
        <item name="moop_bgColor">@color/default_bgColor</item>
        <item name="moop_textColorDark">@color/default_textColorDark</item>
        <item name="moop_textColorLight">@color/default_textColorLight</item>
        <item name="moop_iconColorDark">@color/default_iconColorDark</item>
        <item name="moop_iconColorLight">@color/default_iconColorLight</item>
        <item name="moop_cardDividerColor">?attr/moop_dividerColor</item>
        <item name="moop_cardBgColorDark">@color/default_cardBgColorDark</item>
        <item name="moop_cardBgColorLight">@color/default_cardBgColorLight</item>
        <item name="moop_cardContentColorDark">?attr/moop_iconColorDark</item>
        <item name="moop_cardContentColorLight">?attr/moop_iconColorLight</item>
        <item name="moop_tagOutlineColor">@color/default_tagOutlineColor</item>
        <item name="moop_stageColor">@color/default_stageColor</item>
        <item name="moop_stageStarColor">@color/default_stageStarColor</item>
        <item name="moop_stageBrightColor">@color/default_stageBrightColor</item>
        <item name="moop_stageDimColor">@color/default_stageDimColor</item>
    </style>

    <style name="AppTheme.Translucent" parent="AppTheme.NoActionBar">
        <!-- using a semi-transparent window background for the drag-back gesture -->
        <item name="android:windowBackground">@color/scrim</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="AppTheme.Detail" parent="AppTheme.Translucent">
        <item name="android:statusBarColor">@color/dribbble_super_dark</item>
        <item name="android:colorControlActivated">?android:colorAccent</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>
        <item name="android:windowSharedElementEnterTransition">@transition/detail_shared_enter</item>
        <item name="android:windowSharedElementReturnTransition">@transition/detail_shared_return</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/ic_splash</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="AppTheme.Timetable" parent="AppTheme.NoActionBar" />

    <style name="AppTheme.TheaterSort">
        <item name="android:windowSharedElementEnterTransition">@transition/detail_shared_enter</item>
        <item name="android:windowSharedElementReturnTransition">@transition/detail_shared_return</item>
    </style>

    <style name="AppTheme.TheaterEdit" parent="AppTheme.NoActionBar">
        <item name="android:windowSharedElementEnterTransition">@transition/detail_shared_enter</item>
        <item name="android:windowSharedElementReturnTransition">@transition/detail_shared_return</item>
    </style>

</resources>
