<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="AppTheme.Translucent" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- using a semi-transparent window background for the drag-back gesture -->
        <item name="android:windowBackground">@color/scrim</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="AppTheme.Translucent.Detail">
        <item name="android:statusBarColor">@color/dribbble_super_dark</item>
        <item name="android:colorControlActivated">?android:colorAccent</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/ic_splash</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="AppTheme.Timetable" parent="AppTheme.NoActionBar" />

    <style name="AppTheme.TheaterSort" />

    <style name="AppTheme.TheaterEdit" />

    <!-- TextAppearance -->

    <style name="TextAppearance.Settings.Category" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Chip" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textAppearance">@style/TextAppearance.Chip</item>
    </style>

    <style name="Widget.Chip.Cgv">
        <item name="android:textColor">@color/textCgv</item>
        <item name="chipBackgroundColor">@color/bgCgv</item>
        <item name="chipStrokeColor">@color/grey_200</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <style name="Widget.Chip.Lotte">
        <item name="android:textColor">@color/textLotte</item>
        <item name="chipBackgroundColor">@color/bgLotte</item>
    </style>

    <style name="Widget.Chip.Megabox">
        <item name="android:textColor">@color/textMegabox</item>
        <item name="chipBackgroundColor">@color/bgMegabox</item>
    </style>

    <style name="Widget.Chip.Filter" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:textAppearance">@style/TextAppearance.Chip</item>
    </style>

    <style name="Widget.Chip.Filter.Cgv">
        <item name="android:textColor">@color/selector_chip_cgv_text</item>
        <item name="checkedIcon">@drawable/ic_check_cgv</item>
        <item name="chipBackgroundColor">@color/selector_chip_cgv_bg</item>
        <item name="chipIcon">@drawable/ic_logo_cgv</item>
        <item name="chipStrokeColor">@color/grey_200</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="rippleColor">@color/red_200</item>
    </style>

    <style name="Widget.Chip.Filter.Lotte">
        <item name="android:textColor">@color/textLotte</item>
        <item name="checkedIcon">@drawable/ic_check_lotte</item>
        <item name="chipBackgroundColor">@color/selector_chip_lotte_bg</item>
        <item name="chipIcon">@drawable/ic_logo_lotte</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="Widget.Chip.Filter.Megabox">
        <item name="android:textColor">@color/textMegabox</item>
        <item name="checkedIcon">@drawable/ic_check_megabox</item>
        <item name="chipBackgroundColor">@color/selector_chip_megabox_bg</item>
        <item name="chipIcon">@drawable/ic_logo_megabox</item>
        <item name="rippleColor">@color/white</item>
    </style>

</resources>
