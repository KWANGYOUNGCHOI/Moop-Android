<resources>

    <!-- TextAppearance -->

    <style name="TextAppearance.Settings.Category" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Chip" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textAppearance">@style/TextAppearance.Chip</item>
        <item name="chipMinTouchTargetSize">40dp</item>
    </style>

    <style name="Widget.Chip.Genre">
        <item name="android:textColor">@color/chip_genre_text</item>
        <item name="chipBackgroundColor">@color/chip_genre_bg</item>
        <item name="rippleColor">@color/grey_400</item>
    </style>

    <style name="Widget.Chip.Cgv">
        <item name="android:textColor">@color/chip_cgv_text</item>
        <item name="chipBackgroundColor">@color/chip_cgv_bg</item>
        <item name="chipStrokeColor">#229E9E9E</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="rippleColor">@color/grey_400</item>
    </style>

    <style name="Widget.Chip.Lotte">
        <item name="android:textColor">@color/chip_lotte_text</item>
        <item name="chipBackgroundColor">@color/chip_lotte_bg</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="Widget.Chip.Megabox">
        <item name="android:textColor">@color/chip_megabox_text</item>
        <item name="chipBackgroundColor">@color/chip_megabox_bg</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="Widget.Chip.Naver">
        <item name="android:textColor">@color/chip_naver_text</item>
        <item name="chipBackgroundColor">@color/chip_naver_bg</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="Widget.Chip.Filter" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:textAppearance">@style/TextAppearance.Chip</item>
        <item name="chipMinTouchTargetSize">40dp</item>
    </style>

    <style name="Widget.Chip.Filter.Genre">
        <item name="android:textColor">@color/selector_chip_genre_text</item>
        <item name="checkedIcon">@drawable/ic_check_genre</item>
        <item name="chipBackgroundColor">@color/selector_chip_genre_bg</item>
        <item name="chipIcon">@drawable/ic_logo_genre</item>
        <item name="rippleColor">@color/grey_400</item>
    </style>

    <style name="Widget.Chip.Filter.Cgv">
        <item name="android:textColor">@color/selector_chip_cgv_text</item>
        <item name="checkedIcon">@drawable/ic_check_cgv</item>
        <item name="chipBackgroundColor">@color/selector_chip_cgv_bg</item>
        <item name="chipIcon">@drawable/ic_logo_cgv</item>
        <item name="chipStrokeColor">#229E9E9E</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="rippleColor">@color/grey_400</item>
    </style>

    <style name="Widget.Chip.Filter.Lotte">
        <item name="android:textColor">@color/selector_chip_lotte_text</item>
        <item name="checkedIcon">@drawable/ic_check_lotte</item>
        <item name="chipBackgroundColor">@color/selector_chip_lotte_bg</item>
        <item name="chipIcon">@drawable/ic_logo_lotte</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="Widget.Chip.Filter.Megabox">
        <item name="android:textColor">@color/selector_chip_megabox_text</item>
        <item name="checkedIcon">@drawable/ic_check_megabox</item>
        <item name="chipBackgroundColor">@color/selector_chip_megabox_bg</item>
        <item name="chipIcon">@drawable/ic_logo_megabox</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <!-- Search -->

    <style name="SearchViewTheme" parent="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorControlActivated">?android:colorSecondary</item>
        <item name="android:searchViewStyle">@style/Widget.Moop.SearchView</item>
        <item name="android:textColorHint">?attr/colorOnBackground</item>
        <item name="android:editTextColor">?attr/colorOnBackground</item>
    </style>

    <style name="Widget.Moop.SearchView" parent="android:style/Widget.Material.SearchView">
        <item name="android:searchIcon">@android:color/transparent</item>
        <item name="android:searchHintIcon">@android:color/transparent</item>
        <item name="android:queryBackground">@android:color/transparent</item>
        <item name="android:submitBackground">@android:color/transparent</item>
        <item name="android:closeIcon">@drawable/ic_round_close</item>
    </style>

    <!-- MDC ShapeAppearance -->

    <style name="ShapeAppearance.Round" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ShapeAppearance.Round.Top">
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="ShapeAppearance.Round.Bottom" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
    </style>

</resources>
