<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BlackTheme" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/black_colorPrimary</item>
        <item name="colorPrimaryDark">@color/black_colorPrimaryDark</item>
        <item name="colorAccent">@color/black_colorAccent</item>
        <item name="colorAccentHalf">@color/black_colorAccentHalf</item>
        <item name="android:windowBackground">?attr/moop_bgColor</item>

        <item name="moop_errorColor">@color/black_errorColor</item>
        <item name="moop_dividerColor">@color/black_dividerColor</item>
        <item name="moop_bgColor">@color/black_bgColor</item>
        <item name="moop_textColorDark">@color/black_textColorDark</item>
        <item name="moop_textColorLight">@color/black_textColorLight</item>
        <item name="moop_iconColorDark">@color/black_iconColorDark</item>
        <item name="moop_iconColorLight">@color/black_iconColorLight</item>
        <item name="moop_cardBgColorDark">@color/black_cardBgColorDark</item>
        <item name="moop_cardBgColorLight">@color/black_cardBgColorLight</item>
        <item name="moop_tagOutlineColor">@color/black_tagOutlineColor</item>
    </style>

    <style name="BlackTheme.NoActionBar" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/black_colorPrimary</item>
        <item name="colorPrimaryDark">@color/black_colorPrimaryDark</item>
        <item name="colorAccent">@color/black_colorAccent</item>
        <item name="colorAccentHalf">@color/black_colorAccentHalf</item>
        <item name="android:windowBackground">?attr/moop_bgColor</item>

        <item name="moop_errorColor">@color/black_errorColor</item>
        <item name="moop_dividerColor">@color/black_dividerColor</item>
        <item name="moop_bgColor">@color/black_bgColor</item>
        <item name="moop_textColorDark">@color/black_textColorDark</item>
        <item name="moop_textColorLight">@color/black_textColorLight</item>
        <item name="moop_iconColorDark">@color/black_iconColorDark</item>
        <item name="moop_iconColorLight">@color/black_iconColorLight</item>
        <item name="moop_cardBgColorDark">@color/black_cardBgColorDark</item>
        <item name="moop_cardBgColorLight">@color/black_cardBgColorLight</item>
        <item name="moop_tagOutlineColor">@color/black_tagOutlineColor</item>
    </style>

    <style name="BlackTheme.Translucent" parent="BlackTheme.NoActionBar">
        <!-- using a semi-transparent window background for the drag-back gesture -->
        <item name="android:windowBackground">@color/scrim</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="BlackTheme.Detail" parent="BlackTheme.Translucent">
        <item name="android:statusBarColor">@color/dribbble_super_dark</item>
        <item name="android:colorControlActivated">?android:colorAccent</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>
        <item name="android:windowSharedElementEnterTransition">@transition/detail_shared_enter</item>
        <item name="android:windowSharedElementReturnTransition">@transition/detail_shared_return</item>
    </style>

    <style name="BlackTheme.Splash">
        <item name="android:windowBackground">@drawable/ic_splash</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="BlackTheme.Timetable" parent="BlackTheme.NoActionBar" />

    <style name="BlackTheme.TheaterSort">
        <item name="android:windowSharedElementEnterTransition">@transition/detail_shared_enter</item>
        <item name="android:windowSharedElementReturnTransition">@transition/detail_shared_return</item>
    </style>

    <style name="BlackTheme.TheaterEdit" parent="BlackTheme.NoActionBar">
        <item name="android:windowSharedElementEnterTransition">@transition/detail_shared_enter</item>
        <item name="android:windowSharedElementReturnTransition">@transition/detail_shared_return</item>
    </style>
    
</resources>
