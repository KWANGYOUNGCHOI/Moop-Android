<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="colorPrimary">@color/black</color>
    <color name="colorPrimaryDark">@color/black</color>
    <color name="colorAccent">#8EB5F0</color>
    <color name="colorAccentHalf">#448EB5F0</color>
    <color name="colorSplash">@color/grey_800</color>

    <color name="default_errorColor">#E68282</color>
    <color name="default_dividerColor">@color/grey_700</color>
    <color name="default_bgColor">@color/grey_800</color>
    <color name="default_textColorDark">@color/light_icon</color>
    <color name="default_textColorLight">@color/grey_500</color>
    <color name="default_iconColorDark">@color/light_icon</color>
    <color name="default_iconColorLight">@color/grey_500</color>
    <color name="default_cardBgColorDark">@color/grey_900</color>
    <color name="default_cardBgColorLight">@color/grey_700</color>
    <color name="default_tagOutlineColor">@color/default_bgColor</color>
    <color name="default_stageColor">@color/black</color>
    <color name="default_stageStarColor">@color/colorAccent</color>
    <color name="default_stageBrightColor">@color/light_icon</color>
    <color name="default_stageDimColor">@color/grey_700</color>

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
