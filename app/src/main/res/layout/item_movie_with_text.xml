<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

    <data>
        <variable name="item" type="soup.movie.data.model.Movie" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:foreground="?android:attr/selectableItemBackground" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Space
                    android:id="@+id/backgroundView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="@+id/posterView"
                    app:layout_constraintEnd_toEndOf="@+id/posterView"
                    app:layout_constraintStart_toStartOf="@+id/posterView"
                    app:layout_constraintTop_toTopOf="@+id/posterView" />

                <ImageView
                    android:id="@+id/posterView"
                    android:layout_width="80dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/grey_200"
                    android:scaleType="centerCrop"
                    android:srcUrl="@{item.posterUrl}"
                    app:layout_constraintDimensionRatio="H,27:40"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@tools:sample/avatars" />

                <View
                    android:id="@+id/ageBgOuterView"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_margin="7dp"
                    android:background="@drawable/bg_age_outer"
                    app:layout_constraintStart_toStartOf="@+id/posterView"
                    app:layout_constraintBottom_toBottomOf="@+id/posterView"
                    tools:backgroundTint="@color/white" />

                <View
                    android:id="@+id/ageBgView"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_age_inner"
                    app:layout_constraintStart_toStartOf="@+id/posterView"
                    app:layout_constraintBottom_toBottomOf="@+id/posterView"
                    tools:backgroundTint="@color/amber" />

                <TextView
                    android:id="@+id/titleView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@{item.title}"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/posterView"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Movie Title\nLine2\nLine3" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/shareButton"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/action_share"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>
