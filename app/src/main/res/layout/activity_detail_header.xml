<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

    <data>
        <import type="android.view.View"/>
        <import type="soup.movie.data.helper.MovieExtKt" />
        <variable name="item" type="soup.movie.data.model.Movie" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        tools:background="@color/debug_background">

        <androidx.cardview.widget.CardView
            android:id="@+id/posterCard"
            android:layout_width="124.2dp"
            android:layout_height="0dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:transitionName="@string/transition_poster"
            app:layout_constraintDimensionRatio="H,27:40"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/posterView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars" />

        </androidx.cardview.widget.CardView>

        <include
            android:id="@+id/ageBgView"
            layout="@layout/tag_movie_age_bg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/ageView"
            app:layout_constraintBottom_toBottomOf="@+id/ageView"
            app:layout_constraintStart_toStartOf="@+id/ageView"
            app:layout_constraintEnd_toEndOf="@+id/ageView"
            app:item="@{item}" />

        <include
            android:id="@+id/ageView"
            layout="@layout/tag_movie_age"
            android:layout_width="@dimen/tag_width"
            android:layout_height="@dimen/tag_height"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="@+id/posterCard"
            app:layout_constraintStart_toEndOf="@+id/posterCard"
            app:layout_constraintEnd_toEndOf="@+id/posterCard"
            app:item="@{item}" />

        <include
            android:id="@+id/newView"
            layout="@layout/tag_movie_new"
            android:layout_width="@dimen/tag_width"
            android:layout_height="@dimen/tag_height"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ageView"
            app:layout_constraintStart_toEndOf="@+id/posterCard"
            app:layout_constraintEnd_toEndOf="@+id/posterCard"
            app:item="@{item}"
            tools:visibility="visible" />

        <include
            android:id="@+id/bestView"
            layout="@layout/tag_movie_best"
            android:layout_width="@dimen/tag_width"
            android:layout_height="@dimen/tag_height"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/newView"
            app:layout_constraintStart_toEndOf="@+id/posterCard"
            app:layout_constraintEnd_toEndOf="@+id/posterCard"
            app:item="@{item}"
            tools:visibility="visible" />

        <include
            android:id="@+id/dDayView"
            layout="@layout/tag_movie_d_day"
            android:layout_width="@dimen/tag_width"
            android:layout_height="@dimen/tag_height"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/bestView"
            app:layout_constraintStart_toEndOf="@+id/posterCard"
            app:layout_constraintEnd_toEndOf="@+id/posterCard"
            app:item="@{item}"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/titleView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:text="@{item.title}"
            android:textColor="@color/light_icon"
            android:textSize="18dp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:minLines="1"
            android:maxLines="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/posterCard"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="극장판 요괴워치 섀도사이드-도깨비왕의 부활" />

        <TextView
            android:id="@+id/openDateView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:text="@{item.openDate}"
            android:textColor="@color/light_icon"
            android:textSize="14dp"
            android:transitionName="@string/transition_egg"
            app:layout_constraintTop_toBottomOf="@+id/titleView"
            app:layout_constraintStart_toStartOf="@+id/titleView"
            tools:text="18.10.19" />

        <ImageButton
            android:id="@+id/shareButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:tint="@color/light_icon"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_round_share" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
