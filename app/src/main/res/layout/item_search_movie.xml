<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

    <data>
        <variable name="item" type="soup.movie.data.model.Movie" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="?attr/moop_cardBgColorDark" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="8dp" >

                <androidx.cardview.widget.CardView
                    android:id="@+id/posterCard"
                    android:layout_width="100dp"
                    android:layout_height="0dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:transitionName="@string/transition_poster"
                    app:layout_constraintDimensionRatio="H,27:40"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:cardBackgroundColor="?attr/moop_cardBgColorDark"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/posterView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:srcUrl="@{item.posterUrl}"
                        android:contentDescription="@{item.title}"
                        tools:src="@tools:sample/avatars" />

                </androidx.cardview.widget.CardView>

                <include
                    android:id="@+id/ageBgView"
                    layout="@layout/tag_movie_age_bg"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@+id/ageView"
                    app:layout_constraintBottom_toBottomOf="@+id/ageView"
                    app:layout_constraintStart_toStartOf="@+id/ageView"
                    app:layout_constraintEnd_toEndOf="@+id/ageView"
                    app:item="@{item}" />

                <include
                    android:id="@+id/ageView"
                    layout="@layout/tag_movie_age"
                    android:layout_width="@dimen/tag_width"
                    android:layout_height="@dimen/tag_height"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toTopOf="@+id/posterCard"
                    app:layout_constraintStart_toEndOf="@+id/posterCard"
                    app:layout_constraintEnd_toEndOf="@+id/posterCard"
                    app:item="@{item}" />

                <include
                    android:id="@+id/newView"
                    layout="@layout/tag_movie_new"
                    android:layout_width="@dimen/tag_width"
                    android:layout_height="@dimen/tag_height"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/ageView"
                    app:layout_constraintStart_toEndOf="@+id/posterCard"
                    app:layout_constraintEnd_toEndOf="@+id/posterCard"
                    app:item="@{item}"
                    tools:visibility="visible" />

                <include
                    android:id="@+id/bestView"
                    layout="@layout/tag_movie_best"
                    android:layout_width="@dimen/tag_width"
                    android:layout_height="@dimen/tag_height"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/newView"
                    app:layout_constraintStart_toEndOf="@+id/posterCard"
                    app:layout_constraintEnd_toEndOf="@+id/posterCard"
                    app:item="@{item}"
                    tools:visibility="visible" />

                <include
                    android:id="@+id/dDayView"
                    layout="@layout/tag_movie_d_day"
                    android:layout_width="@dimen/tag_width"
                    android:layout_height="@dimen/tag_height"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/bestView"
                    app:layout_constraintStart_toEndOf="@+id/posterCard"
                    app:layout_constraintEnd_toEndOf="@+id/posterCard"
                    app:item="@{item}"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/titleView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="8dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:text="@{item.title}"
                    android:textColor="?attr/moop_cardContentColorDark"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:minLines="1"
                    android:maxLines="3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/posterCard"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="극장판 요괴워치 섀도사이드-도깨비왕의 부활" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="120dp"
                    app:layout_constraintStart_toEndOf="@+id/posterCard" />

                <TextView
                    android:id="@+id/theaterCgvView"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/bg_circle"
                    android:backgroundTint="@color/chip_cgv_bg"
                    android:elevation="4dp"
                    android:gravity="center"
                    android:text="CGV"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/chip_cgv_text"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:visibleIf="@{item.screeningAtCgv}"
                    app:layout_constraintBottom_toBottomOf="@+id/posterCard"
                    app:layout_constraintStart_toEndOf="@+id/guideline"
                    app:layout_constraintEnd_toStartOf="@+id/theaterLotteView"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/theaterLotteView"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/bg_circle"
                    android:backgroundTint="@color/chip_lotte_bg"
                    android:elevation="4dp"
                    android:gravity="center"
                    android:text="L"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/chip_lotte_text"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:visibleIf="@{item.screeningAtLotteCinema}"
                    app:layout_constraintBottom_toBottomOf="@+id/posterCard"
                    app:layout_constraintStart_toEndOf="@+id/theaterCgvView"
                    app:layout_constraintEnd_toStartOf="@+id/theaterMegaboxView"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/theaterMegaboxView"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/bg_circle"
                    android:backgroundTint="@color/chip_megabox_bg"
                    android:elevation="4dp"
                    android:gravity="center"
                    android:text="M"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/chip_megabox_text"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:visibleIf="@{item.screeningAtMegabox}"
                    app:layout_constraintBottom_toBottomOf="@+id/posterCard"
                    app:layout_constraintStart_toEndOf="@+id/theaterLotteView"
                    tools:visibility="visible" />

                <ImageButton
                    android:id="@+id/shareButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:tint="?attr/moop_cardContentColorDark"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@drawable/ic_round_share" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>
