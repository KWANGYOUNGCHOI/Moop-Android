<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/category_home_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="홈 타입"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:transitionName="@string/transition_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <soup.widget.CheckedImageView
        android:id="@+id/icon_home_type_vertical"
        android:layout_width="100dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_home_type_vertical"
        android:scaleType="centerInside"
        android:background="@drawable/selector_bg_home_type"
        app:checked="true"
        app:layout_constraintEnd_toStartOf="@+id/icon_home_type_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_home_type" />

    <soup.widget.CheckedImageView
        android:id="@+id/icon_home_type_horizontal"
        android:layout_width="100dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_home_type_horizontal"
        android:scaleType="centerInside"
        android:background="@drawable/selector_bg_home_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icon_home_type_vertical"
        app:layout_constraintTop_toBottomOf="@+id/category_home_type" />

    <View
        android:id="@+id/divider_home_type"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/grey_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_home_type_vertical"/>

    <TextView
        android:id="@+id/theater_header"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="선호하는 극장"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:transitionName="@string/transition_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider_home_type" />

    <TextView
        android:id="@+id/theater_option"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/settings_option_bg"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:transitionName="@string/transition_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/theater_header"
        tools:text="Movie Title" />

    <View
        android:id="@+id/divider_theater"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_margin="12dp"
        android:background="@color/grey_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/theater_option"/>

    <TextView
        android:id="@+id/category_theme"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="테마"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:transitionName="@string/transition_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider_theater" />

    <TextView
        android:id="@+id/theme"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/settings_option_bg"
        android:backgroundTint="@color/grey_200"
        android:gravity="center"
        android:text="준비중입니다"
        android:textColor="@color/grey_600"
        android:transitionName="@string/transition_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_theme" />

</android.support.constraint.ConstraintLayout>