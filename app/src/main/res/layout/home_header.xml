<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data />

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:contentInsetEndWithActions="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:navigationIcon="@drawable/ic_round_menu"
            tools:menu="@menu/fragment_movie_list">

            <LinearLayout
                android:id="@+id/action_now"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/selector_home_navigation_bg"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <CheckedTextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:checkMark="@drawable/ic_round_movie"
                    android:checkMarkTint="@color/selector_home_navigation_text"
                    tools:checked="true" />

                <CheckedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:gravity="center"
                    android:text="@string/menu_now"
                    android:textColor="@color/selector_home_navigation_text"
                    tools:checked="true" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/action_plan"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/selector_home_navigation_bg"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <CheckedTextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:checkMark="@drawable/ic_round_plan"
                    android:checkMarkTint="@color/selector_home_navigation_text" />

                <CheckedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:gravity="center"
                    android:text="@string/menu_plan"
                    android:textColor="@color/selector_home_navigation_text" />

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
</layout>