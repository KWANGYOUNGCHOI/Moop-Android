<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/preview_card"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:foreground="?android:attr/selectableItemBackground" >

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minWidth="250dp">

        <Space
            android:id="@+id/backgroundView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/posterView"
            app:layout_constraintEnd_toEndOf="@+id/posterView"
            app:layout_constraintStart_toStartOf="@+id/posterView"
            app:layout_constraintTop_toTopOf="@+id/posterView"
            />

        <ImageView
            android:id="@+id/posterView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:background="@color/grey_200"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="H,27:40"
            app:layout_constraintBottom_toTopOf="@+id/titleView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/titleView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/favoriteButton"
            tools:text="Movie Title" />

        <TextView
            android:id="@+id/sub_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/shareButton"
            app:layout_constraintStart_toEndOf="@+id/age_icon"
            app:layout_constraintTop_toTopOf="@+id/shareButton"
            tools:text="90%" />

        <ImageButton
            android:id="@+id/favoriteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_favorite"
            app:layout_constraintTop_toTopOf="@+id/shareButton"
            app:layout_constraintEnd_toStartOf="@+id/shareButton" />

        <ImageButton
            android:id="@+id/share_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_share"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <View
            android:id="@+id/ageBgView"
            android:layout_width="4dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/posterView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:background="@color/amber" />

        <TextView
            android:id="@+id/age_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/sub_text2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/sub_text2"
            app:srcCompat="@drawable/ic_share"
            tools:text="15"
            tools:textColor="@color/amber" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>